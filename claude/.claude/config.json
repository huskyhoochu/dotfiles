{
  "version": "1.0.0",
  "name": "Automated Work Distribution System",
  "description": "Intelligent agent distribution system using Claude Code and MCP integration",

  "systemPrompt": "./system_prompt.md",
  "routingRules": "./routing_rules.md",
  "mcpConfig": "./mcp_config.json",

  "agents": {
    "loadPath": "./agents/",
    "autoRoute": true,
    "available": [
      "work-distributor",
      "golang-pro",
      "typescript-pro",
      "frontend-developer",
      "nextjs-fullstack-expert",
      "postgres-pro",
      "react-specialist",
      "rust-engineer",
      "code-reviewer",
      "git-workflow-manager"
    ]
  },

  "mcp": {
    "enforceUsage": true,
    "sequentialThinkingRequired": [
      "complex_tasks",
      "architecture_design",
      "system_planning",
      "optimization_strategy",
      "multi_step_implementation"
    ],
    "serenaRequired": [
      "code_reading",
      "code_writing",
      "code_analysis",
      "function_search",
      "refactoring",
      "debugging"
    ]
  },

  "routing": {
    "enabled": true,
    "fallbackAgent": "golang-pro",
    "directResponseThreshold": {
      "complexity": "low",
      "lineCount": 5,
      "topics": ["simple_questions", "definitions", "explanations"]
    }
  },

  "features": {
    "autoAgentSelection": true,
    "mcpEnforcement": true,
    "contextualRouting": true,
    "performanceOptimization": true,
    "qualityAssurance": true
  },

  "settings": {
    "defaultLanguage": "english",
    "verboseLogging": false,
    "cacheAgentDecisions": true,
    "maxAgentSwitches": 3,
    "timeoutMinutes": 30
  }
}
