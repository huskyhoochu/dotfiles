# swaylock-effects configuration
# Enhanced screen locker for Sway
# Location: ~/.config/swaylock/config

# Display settings
show-failed-attempts
show-keyboard-layout

# Clock settings
clock
timestr=%H:%M
datestr=%Y년 %m월 %d일

# Indicator settings
indicator
indicator-radius=100
indicator-thickness=7
indicator-caps-lock

# Background image
image=~/.config/backgrounds/nice-blue-background.png
scaling=fill

# Effects (swaylock-effects only)
effect-blur=7x5
effect-vignette=0.5:0.5
fade-in=0.2

# Catppuccin Mocha color scheme
# Default state
inside-color=1e1e2e
ring-color=89b4fa
key-hl-color=a6e3a1
bs-hl-color=f38ba8
text-color=cdd6f4
separator-color=00000000

# Verifying state (checking password)
inside-ver-color=89b4fa
ring-ver-color=89dceb
text-ver-color=1e1e2e

# Wrong password state
inside-wrong-color=f38ba8
ring-wrong-color=eba0ac
text-wrong-color=1e1e2e

# Clear state (cleared input)
inside-clear-color=f9e2af
ring-clear-color=f9e2af
text-clear-color=1e1e2e

# Caps Lock state
inside-caps-lock-color=fab387
ring-caps-lock-color=fab387
text-caps-lock-color=1e1e2e

# Grace period (seconds before requiring password)
# Useful for quick unlocks after accidental locks
grace=2
grace-no-mouse
grace-no-touch
